private List<int> Triple()
{
   List<int> arguments = new ArrayList<int>(); 
   
   int argument;
}
{
	< LBRACKET >
	{		argument = Intger.parseInt(token.image);
		arguments.add(argument);
	}
	< COMMA >
	{
		argument = Intger.parseInt(token.image);
		arguments.add(argument);
	}
	< COMMA >
	{
		argument = Intger.parseInt(token.image);
		arguments.add(argument);
	}
	< RBRACKET >

	{
		return arguments;
	}


}


